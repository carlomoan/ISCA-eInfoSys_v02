# ================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ================================================
# Use this file for local development environment
# To activate: cp .env.development .env
# ================================================

# ================================================
# ENVIRONMENT SETTINGS
# ================================================
APP_ENV=development
APP_DEBUG=true
APP_NAME="ISCA e-InfoSys"
APP_TIMEZONE=Africa/Dar_es_Salaam

# Base URL for Development (adjust to your local setup)
# Common setups:
# - XAMPP/WAMP: http://localhost/ISCA-eInfoSys_v02
# - Built-in PHP server: http://localhost:8000
# - Apache with virtual host: http://isca.local
BASE_URL=http://localhost:8000

# ================================================
# DATABASE CONFIGURATION - DEVELOPMENT
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=survey_amrc_db
DB_USER=root
DB_PASS=123456
DB_CHARSET=utf8mb4
DB_TIMEOUT=30
DB_MAX_RETRIES=3
DB_PERSISTENT=false

# ================================================
# SECURITY SETTINGS
# ================================================
# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=isca_session_dev
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax
SESSION_REGENERATE_INTERVAL=1800

# Password Policy (relaxed for development)
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting (higher limits for development)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_API=100
RATE_LIMIT_REGISTER=10

# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_LENGTH=32

# ================================================
# FILE UPLOAD SETTINGS
# ================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,doc,docx,png,jpg,jpeg
UPLOAD_PATH_FIELD_DATA=uploads/field_data/
UPLOAD_PATH_REPORTS=uploads/reports/

# ================================================
# LOGGING SETTINGS
# ================================================
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log
LOG_MAX_SIZE_MB=50

# ================================================
# EMAIL CONFIGURATION (Optional - for testing)
# ================================================
MAIL_ENABLED=false
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=dev@localhost
MAIL_FROM_NAME="ISCA e-InfoSys Dev"

# ================================================
# CACHE SETTINGS
# ================================================
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=600
CACHE_PATH=cache/

# ================================================
# MAINTENANCE MODE
# ================================================
MAINTENANCE_MODE=false
