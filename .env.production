# ================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ================================================
# Use this file for production/live server environment
# To activate: cp .env.production .env
# IMPORTANT: Keep credentials secure, do not commit to version control
# ================================================

# ================================================
# ENVIRONMENT SETTINGS
# ================================================
APP_ENV=production
APP_DEBUG=false
APP_NAME="ISCA e-InfoSys"
APP_TIMEZONE=Africa/Dar_es_Salaam

# Base URL for Production
# Options:
# - Full URL: https://yourdomain.com
# - Relative path: /ISCA-eInfoSys_v02 (if deployed in subfolder)
BASE_URL=https://edatacolls.co.tz

# ================================================
# DATABASE CONFIGURATION - PRODUCTION
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=edatomvt_edata
DB_USER=edatomvt_admin
DB_PASS=EDataColls@2025
DB_CHARSET=utf8mb4
DB_TIMEOUT=30
DB_MAX_RETRIES=3
DB_PERSISTENT=false

# ================================================
# SECURITY SETTINGS
# ================================================
# Session Configuration (Strict for production)
SESSION_LIFETIME=7200
SESSION_NAME=isca_session_prod
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict
SESSION_REGENERATE_INTERVAL=1800

# Password Policy (Strict for production)
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting (Strict for production)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60
RATE_LIMIT_REGISTER=3

# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_LENGTH=32

# ================================================
# FILE UPLOAD SETTINGS
# ================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,doc,docx
UPLOAD_PATH_FIELD_DATA=uploads/field_data/
UPLOAD_PATH_REPORTS=uploads/reports/

# ================================================
# LOGGING SETTINGS
# ================================================
LOG_ENABLED=true
LOG_LEVEL=error
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log
LOG_MAX_SIZE_MB=100
LOG_ROTATION_DAYS=90

# ================================================
# EMAIL CONFIGURATION (Production)
# ================================================
MAIL_ENABLED=true
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_secure_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="ISCA e-InfoSys"
MAIL_ADMIN_EMAIL=admin@example.com

# ================================================
# CACHE SETTINGS
# ================================================
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=cache/

# ================================================
# BACKUP SETTINGS
# ================================================
BACKUP_ENABLED=true
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30
BACKUP_AUTO_SCHEDULE=daily

# ================================================
# API SETTINGS
# ================================================
API_RATE_LIMIT=100
API_TIMEOUT=30
API_VERSION=v1

# ================================================
# MAINTENANCE MODE
# ================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. We'll be back soon."
MAINTENANCE_WHITELIST_IPS=
